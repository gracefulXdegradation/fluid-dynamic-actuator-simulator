        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "./build",
            ],
            "problemMatcher": [],
            "detail": "Remove the build directory"
        },
        {
            "label": "Run Executable",
            "type": "shell",
            "command": "./build/flight_dynamics_simulator",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "CMake: Build",
            "problemMatcher": [],
            "detail": "Run the built executable."
        }
    ]
}